    , aeson
    , base
    , bytestring
    , http-client
    , scientific >=0.3.6
    , text
    , unordered-containers >=0.2.13
    , ytterby
  default-language: Haskell2010
  ghc-options: -Wall -O2 -threaded

executable ytterby-curl
  hs-source-dirs: app
  main-is: DebugTool.hs
