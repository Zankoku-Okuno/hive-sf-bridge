library
  hs-source-dirs: src
  exposed-modules:
    Salesforce.Client
    TheHive.CortexUtils
  build-depends:
    , aeson >=1.5
    , base >=4.10
    , bytestring >=0.10
    , directory >=1.3
    , filepath >=1.4
    , http-client >=0.7
    , http-client-tls >=0.3.5
    , text >=1.2
  default-language: Haskell2010
  ghc-options: -Wall -O2 -threaded

executable ytterby
  hs-source-dirs: app
  main-is: Main.hs
  -- other-modules:
